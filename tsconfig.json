{
  "compilerOptions": {
    // "noImplicitAny": false,
    "experimentalDecorators": true,
    "sourceMap": true,
    "lib": ["dom", "es2017"],    
    "module": "es2015",
    "moduleResolution": "node",
    "target": "es2017",
    "allowJs": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "importHelpers": true,
    "strictNullChecks": true,
    "noUnusedLocals": false,
    "noImplicitAny": false,
    "paths": {
      "@view/*": ["app/view/*"],
      "@root/*": ["./*"],
      "@app/*": ["/app*"]
    },
    "types": [
      "jquery"
    ]
  }
  ,"include": ["app/**/*","*.ts"]    
  ,"exclude": ["node_modules"]
}