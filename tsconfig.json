{
  "compilerOptions": {
    // "noImplicitAny": false,
    "experimentalDecorators": true,
    "sourceMap": true,
    "lib": ["dom", "esnext"],    
    "module": "esnext",
    "moduleResolution": "node",
    "target": "es6",
    "allowJs": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "importHelpers": true,
    "strictNullChecks": true,
    "noUnusedLocals": false,
    "noImplicitAny": false,
    "paths": {
      "@view/*": ["app/view/*"],
      "@root/*": ["./*"],
      "@app/*": ["/app*"]
    }
  }
  ,"include": ["app/**/*","*.ts"]    
  ,"exclude": ["node_modules"]
}