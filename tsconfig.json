{
  "compilerOptions": {
    "noImplicitAny": false,
    "experimentalDecorators": true,
    "sourceMap": true,
    "module": "esnext",
    "moduleResolution": "node",
    "target": "esnext",
    "allowJs": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "importHelpers": true,
    "paths": {
      "@view/*": ["view/*"],
    }
  }
  ,"include": ["app/**/*"]    
  ,"exclude": ["node_modules"]
}
